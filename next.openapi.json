{
  "openapi": "3.0.0",
  "info": {
    "title": "TestNest API",
    "version": "1.0.0",
    "description": "OpenAPI specification for TestNest API"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "defaultResponseSet": "common",
  "responseSets": {
    "common": [
      "400",
      "422",
      "500"
    ],
    "auth": [
      "400",
      "401",
      "403",
      "422",
      "500"
    ],
    "public": [
      "400",
      "422",
      "500"
    ]
  },
  "errorConfig": {
    "template": {
      "type": "object",
      "properties": {
        "error": { "type": "string", "example": "{{ERROR_MESSAGE}}" },
        "issues": {
          "type": "object",
          "nullable": true,
          "example": { "body": [{ "code": "invalid_type", "message": "Expected string, received number", "path": ["text"] }] }
        },
        "detail": { "type": "string", "nullable": true, "example": "Additional error details" }
      },
      "required": ["error"]
    },
    "codes": {
      "400": {
        "description": "Bad Request",
        "variables": {
          "ERROR_MESSAGE": "Invalid request parameters"
        }
      },
      "401": {
        "description": "Unauthorized",
        "variables": {
          "ERROR_MESSAGE": "Authentication required"
        }
      },
      "403": {
        "description": "Forbidden",
        "variables": {
          "ERROR_MESSAGE": "Access denied"
        }
      },
      "404": {
        "description": "Not Found",
        "variables": {
          "ERROR_MESSAGE": "Resource not found"
        }
      },
      "409": {
        "description": "Conflict",
        "variables": {
          "ERROR_MESSAGE": "Resource already exists"
        }
      },
      "422": {
        "description": "Validation error",
        "variables": {
          "ERROR_MESSAGE": "Validation failed"
        }
      },
      "500": {
        "description": "Internal Server Error",
        "variables": {
          "ERROR_MESSAGE": "An unexpected error occurred"
        }
      }
    }
  },
  "apiDir": "./src/app/api",
  "schemaDir": "./src/app/api/_lib",
  "schemaType": "zod",
  "docsUrl": "api-docs",
  "ui": "scalar",
  "outputFile": "openapi.json",
  "outputDir": "./public",
  "includeOpenApiRoutes": false,
  "debug": false
}
